<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" >

<!-- currently unsupported
    <com.android.settings.cyanogenmod.ButtonBacklightBrightness
        android:dialogTitle="@string/button_backlight_title"
        android:key="button_backlight"
        android:title="@string/button_backlight_title"
        android:persistent="false" />
-->

    <!-- Device Specific Bluetooth Input settings -->
<!-- currently unsupported ???
    <Preference
        android:key="bluetooth_input_settings">
        <intent
            android:action="com.cyanogenmod.action.LAUNCH_BLUETOOTH_INPUT_SETTINGS"
            android:targetPackage="com.cyanogenmod.settings.device"
            android:targetClass="com.cyanogenmod.settings.device.BluetoothInputSettings" />
    </Preference>
-->

    <PreferenceCategory
        android:key="power_key"
        android:title="@string/hardware_keys_power_key_title" >

<!-- currently unsupported
        <PreferenceScreen
            android:key="power_menu"
            android:title="@string/power_menu_title"
            android:fragment="com.android.settings.cyanogenmod.PowerMenuActions" />
-->

        <SwitchPreference
            android:key="power_end_call"
            android:title="@string/power_end_call_title"
            android:summary="@string/power_end_call_summary"
            android:persistent="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="volume_keys"
        android:title="@string/hardware_keys_volume_keys_title" >

        <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="volume_wake_screen"
            android:title="@string/button_wake_title"
            android:summary="@string/button_wake_summary"
            android:defaultValue="false"
            android:disableDependentsState="true" />

        <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="volbtn_music_controls"
            android:title="@string/volbtn_music_controls_title"
            android:summary="@string/volbtn_music_controls_summary"
            android:defaultValue="true"
            android:dependency="volume_wake_screen" />

        <ListPreference
            android:dialogTitle="@string/volbtn_cursor_control_title"
            android:entries="@array/volbtn_cursor_control_entries"
            android:entryValues="@array/volbtn_cursor_control_values"
            android:key="volume_key_cursor_control"
            android:persistent="false"
            android:title="@string/volbtn_cursor_control_title" />

        <SwitchPreference
            android:key="swap_volume_buttons"
            android:title="@string/swap_volume_buttons_title"
            android:summary="@string/swap_volume_buttons_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="home_key"
        android:title="@string/hardware_keys_home_key_title" >

        <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="home_wake_screen"
            android:title="@string/button_wake_title"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="home_answer_call"
            android:title="@string/home_answer_call_title"
            android:summary="@string/home_answer_call_summary"
            android:persistent="false"/>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_home_long_press"
            android:summary="@string/softkey_longpress_summary"
            android:title="@string/hardware_keys_long_press_title"
            settings:observedUri="@string/hardkey_home_long_press_uri"
            settings:defaultVal="@string/action_value_menu" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_home_double_tap"
            android:summary="@string/hardware_keys_double_tap_summary"
            android:title="@string/hardware_keys_double_tap_title"
            settings:observedUri="@string/hardkey_home_double_tap_uri"
            settings:defaultVal="@string/action_value_recent_apps" >
        </com.android.settings.slim.ActionPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="back_key"
        android:title="@string/hardware_keys_back_key_title" >

        <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="back_wake_screen"
            android:title="@string/button_wake_title"
            android:defaultValue="false" />

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_back_long_press"
            android:summary="@string/softkey_longpress_summary"
            android:title="@string/hardware_keys_long_press_title"
            settings:observedUri="@string/hardkey_back_long_press_uri" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_back_double_tap"
            android:summary="@string/hardware_keys_double_tap_summary"
            android:title="@string/hardware_keys_double_tap_title"
            settings:observedUri="@string/hardkey_back_double_tap_uri" >
        </com.android.settings.slim.ActionPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="app_switch_key"
        android:title="@string/hardware_keys_appswitch_key_title" >        

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_app_switch_single_tap"
            android:summary="@string/hardware_keys_single_tap_summary"
            android:title="@string/hardware_keys_short_press_title"
            settings:observedUri="@string/hardkey_app_switch_single_tap_uri"
            settings:defaultVal="@string/action_value_recent_apps" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_app_switch_long_press"
            android:summary="@string/softkey_longpress_summary"
            android:title="@string/hardware_keys_long_press_title"
            settings:observedUri="@string/hardkey_app_switch_long_press_uri" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_app_switch_double_tap"
            android:summary="@string/hardware_keys_double_tap_summary"
            android:title="@string/hardware_keys_double_tap_title"
            settings:observedUri="@string/hardkey_app_switch_double_tap_uri" >
        </com.android.settings.slim.ActionPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="menu_key"
        android:title="@string/hardware_keys_menu_key_title" >        

        <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="menu_wake_screen"
            android:title="@string/button_wake_title"
            android:defaultValue="false" />

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_menu_single_tap"
            android:summary="@string/hardware_keys_single_tap_summary"
            android:title="@string/hardware_keys_short_press_title"
            settings:observedUri="@string/hardkey_menu_single_tap_uri"
            settings:defaultVal="@string/action_value_menu" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_menu_long_press"
            android:summary="@string/softkey_longpress_summary"
            android:title="@string/hardware_keys_long_press_title"
            settings:observedUri="@string/hardkey_menu_long_press_uri" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_menu_double_tap"
            android:summary="@string/hardware_keys_double_tap_summary"
            android:title="@string/hardware_keys_double_tap_title"
            settings:observedUri="@string/hardkey_menu_double_tap_uri" >
        </com.android.settings.slim.ActionPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="assist_key"
        android:title="@string/hardware_keys_assist_key_title" >

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_assist_single_tap"
            android:summary="@string/hardware_keys_single_tap_summary"
            android:title="@string/hardware_keys_short_press_title"
            settings:observedUri="@string/hardkey_assist_single_tap_uri"
            settings:defaultVal="@string/action_value_search_assist" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_assist_long_press"
            android:summary="@string/softkey_longpress_summary"
            android:title="@string/hardware_keys_long_press_title"
            settings:observedUri="@string/hardkey_assist_long_press_uri"
            settings:defaultVal="@string/action_value_voice_search" >
        </com.android.settings.slim.ActionPreference>

        <com.android.settings.slim.ActionPreference
            android:key="hardkey_assist_double_tap"
            android:summary="@string/hardware_keys_double_tap_summary"
            android:title="@string/hardware_keys_double_tap_title"
            settings:observedUri="@string/hardkey_assist_double_tap_uri" >
        </com.android.settings.slim.ActionPreference>

    </PreferenceCategory>

</PreferenceScreen>
